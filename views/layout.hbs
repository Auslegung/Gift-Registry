<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href='/css/main.css' rel='stylesheet'>
    <title>{{title}}</title>
  </head>
  <body>
    <header>
      <!-- if successFlash
      <p>{{successFlash}}</p> -->

      {{#if user}}
        <form class="logout" action="/logout?_method=DELETE" method="POST">
          <button type="submit" name="logout">Log Out</button>
        </form>
      {{/if}}
      {{#unless user}}
        <form class="register" action="/home/register" method="POST">
          <input type="email" name="username" placeholder="email">
          <input type="password" name="password" placeholder="password">
          <input type="text" name="firstName" placeholder="First Name">
          <input type="text" name="lastName" placeholder="last name">
          <input type="text" name="partnerFirstName" placeholder="partner's first name">
          <input type="text" name="partnerLastName" placeholder="partner's last name">
          <input type="email" name="partnerEmail" placeholder="partner's email">
          <input type="submit" name="signup" value="Sign Up">
        </form>
        <form class="login" action="/home/login" method="POST">
          <input type="email" name="username" placeholder="email">
          <input type="password" name="password" placeholder="password">
          <input type="submit" name="login" value="Log In">
        </form>
      {{/unless}}
      <h1>GiftRegistryFreedom.com</h1>
      <h2>Break free from gift registry restraints!</h2>
      <form class="search" action="/home/results" method="GET">
        <input type="text" name="searchString" placeholder="name">
        <input type="submit" name="search">Search for a Registry</input>
      </form>
    </header>
    {{{ body }}}
    <footer>

    </footer>
  </body>
</html>
